@model BudgetTracker.Models.DTOs.Transaction.TransactionViewDto

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Transaction
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong>Warning!</strong> Are you sure you want to delete this transaction? This action cannot be undone and will update your account balance.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8">
                            <h4 class="@(Model.Type == "Income" ? "text-success" : "text-danger")">
                                @(Model.Type == "Income" ? "+" : "-")@Model.Amount.ToString("N2") @Model.Currency
                            </h4>
                        </dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">
                            @if (Model.Type == "Income")
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-arrow-down"></i> Income
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-arrow-up"></i> Expense
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.Date.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Account</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.AccountName</strong>
                        </dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.CategoryName))
                            {
                                <span class="badge bg-secondary">@Model.CategoryName</span>
                            }
                            else
                            {
                                <span class="text-muted">Uncategorized</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> <strong>Note:</strong> Deleting this transaction will reverse its effect on the account balance.
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

