@model BudgetTracker.Models.DTOs.Transaction.UpdateTransactionDto

@{
    ViewData["Title"] = "Edit Transaction";
    var accounts = ViewBag.Accounts as IEnumerable<BudgetTracker.Models.DTOs.Account.AccountViewDto>;
    var categories = ViewBag.Categories as IEnumerable<BudgetTracker.Models.DTOs.Category.CategoryViewDto>;
    var budgets = ViewBag.Budgets as IEnumerable<BudgetTracker.Models.DTOs.Budget.BudgetViewDto>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> Edit Transaction
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Type" class="form-label">Transaction Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="">-- Select Type --</option>
                                <option value="Income">Income</option>
                                <option value="Expense">Expense</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Amount" class="form-label">Amount</label>
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Date" class="form-label">Transaction Date</label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AccountId" class="form-label">Account</label>
                            <select asp-for="AccountId" class="form-select" id="AccountId">
                                <option value="">-- Select Account --</option>
                                @if (accounts != null)
                                {
                                    @foreach (var account in accounts)
                                    {
                                        <option value="@account.Id">@account.Name (@account.Balance.ToString("N2") @account.Currency)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="form-label">Category (Optional)</label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="">-- Select Category --</option>
                                @if (categories != null)
                                {
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BudgetId" class="form-label">Budget (Optional)</label>
                            <select asp-for="BudgetId" class="form-select" id="budgetSelect">
                                <option value="">-- Select an account first --</option>
                            </select>
                            <span asp-validation-for="BudgetId" class="text-danger"></span>
                            <small class="form-text text-muted">Budgets will be filtered based on selected account</small>
                        </div>
                        
                        @* Hidden data for JavaScript filtering *@
                        <script id="budgetData" type="application/json">
                            @Html.Raw(System.Text.Json.JsonSerializer.Serialize(budgets?.Select(b => new { 
                                id = b.Id, 
                                name = b.Name,
                                accountId = b.AccountId, 
                                startDate = b.StartDate.ToString("MMM yyyy"), 
                                endDate = b.EndDate.ToString("MMM yyyy"), 
                                amount = b.BudgetAmount.ToString("N2")
                            })))
                        </script>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description (Optional)</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> <strong>Note:</strong> Changing the account, amount, or type will update account balances accordingly.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Budget data from server
        const budgetData = JSON.parse(document.getElementById('budgetData').textContent);
        const accountSelect = document.getElementById('AccountId');
        const budgetSelect = document.getElementById('budgetSelect');

        // Store the initial budget ID to reselect after filtering
        const initialBudgetId = '@Model.BudgetId';

        // Filter budgets based on selected account
        function filterBudgets() {
            const selectedAccountId = accountSelect.value ? parseInt(accountSelect.value) : null;
            
            // Clear existing options
            budgetSelect.innerHTML = '<option value="">-- Select Budget --</option>';
            
            if (!selectedAccountId) {
                budgetSelect.innerHTML = '<option value="">-- Select an account first --</option>';
                return;
            }

            // Filter budgets for selected account or budgets with no account (all accounts)
            const filteredBudgets = budgetData.filter(b => 
                b.accountId === selectedAccountId || b.accountId === null
            );

            if (filteredBudgets.length === 0) {
                budgetSelect.innerHTML += '<option value="">-- No budgets available for this account --</option>';
            } else {
                filteredBudgets.forEach(budget => {
                    const option = document.createElement('option');
                    option.value = budget.id;
                    option.textContent = `${budget.name} (${budget.startDate} - ${budget.endDate}) - ${budget.amount} BGN`;
                    // Reselect the initial budget if it matches
                    if (budget.id.toString() === initialBudgetId) {
                        option.selected = true;
                    }
                    budgetSelect.appendChild(option);
                });
            }
        }

        // Account change event listener
        accountSelect.addEventListener('change', filterBudgets);

        // Initialize on page load
        filterBudgets();
    </script>
}

