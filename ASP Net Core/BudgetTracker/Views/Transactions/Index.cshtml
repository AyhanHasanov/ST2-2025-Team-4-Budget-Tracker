@model IEnumerable<BudgetTracker.Models.DTOs.Transaction.TransactionViewDto>

@{
    ViewData["Title"] = "Transactions";
    var accounts = ViewBag.Accounts as IEnumerable<BudgetTracker.Models.DTOs.Account.AccountViewDto>;
    var selectedAccountId = ViewBag.SelectedAccountId as int?;
    var currency = ViewBag.Currency as string;
    var currencyDisplay = currency ?? "Mixed";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="mb-3">
                <i class="fas fa-exchange-alt"></i> My Transactions
            </h2>
        </div>
        <div class="col-md-6 text-end">
            @if (selectedAccountId.HasValue)
            {
                <a asp-action="GetSummary" asp-route-accountId="@selectedAccountId" class="btn btn-info me-2">
                    <i class="fas fa-chart-line"></i> Get AI Summary
                </a>
                <a asp-action="GetAdvice" asp-route-accountId="@selectedAccountId" class="btn btn-success me-2">
                    <i class="fas fa-lightbulb"></i> Get AI Advice
                </a>
            }
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Transaction
            </a>
        </div>
    </div>

    <!-- Account Filter -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="get" asp-action="Index" class="row g-3">
                        <div class="col-md-10">
                            <label for="accountFilter" class="form-label">
                                <i class="fas fa-filter"></i> Filter by Account
                            </label>
                            <select id="accountFilter" name="accountId" class="form-select" onchange="this.form.submit()">
                                <option value="">All Accounts (Mixed Currencies)</option>
                                @if (accounts != null)
                                {
                                    @foreach (var account in accounts)
                                    {
                                        <option value="@account.Id" selected="@(selectedAccountId == account.Id)">
                                            @account.Name - @account.Currency (@account.Balance.ToString("N2"))
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            @if (selectedAccountId.HasValue)
                            {
                                <label class="form-label">&nbsp;</label>
                                <a asp-action="Index" class="btn btn-secondary w-100">
                                    <i class="fas fa-times"></i> Clear Filter
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        @if (currency != null)
        {
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <h6 class="text-muted">Total Income</h6>
                                    <h3 class="text-success">
                                        @Model.Where(t => t.Type == "Income").Sum(t => t.Amount).ToString("N2") @currencyDisplay
                                    </h3>
                                </div>
                                <div class="col-md-4 text-center">
                                    <h6 class="text-muted">Total Expenses</h6>
                                    <h3 class="text-danger">
                                        @Model.Where(t => t.Type == "Expense").Sum(t => t.Amount).ToString("N2") @currencyDisplay
                                    </h3>
                                </div>
                                <div class="col-md-4 text-center">
                                    <h6 class="text-muted">Net Balance</h6>
                                    <h3 class="text-primary">
                                        @{
                                            var netBalance = Model.Where(t => t.Type == "Income").Sum(t => t.Amount) - 
                                                            Model.Where(t => t.Type == "Expense").Sum(t => t.Amount);
                                        }
                                        @netBalance.ToString("N2") @currencyDisplay
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i> <strong>Note:</strong> You're viewing transactions across multiple currencies. Please filter by a specific account to see accurate totals, summaries, and get AI-powered insights.
                    </div>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-calendar"></i> Date</th>
                                    <th><i class="fas fa-tag"></i> Category</th>
                                    <th><i class="fas fa-chart-pie"></i> Budget</th>
                                    <th><i class="fas fa-wallet"></i> Account</th>
                                    <th><i class="fas fa-align-left"></i> Description</th>
                                    <th><i class="fas fa-exchange-alt"></i> Type</th>
                                    <th class="text-end"><i class="fas fa-money-bill"></i> Amount</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in Model.OrderByDescending(t => t.Date))
                                {
                                    <tr>
                                        <td>@transaction.Date.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(transaction.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@transaction.CategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Uncategorized</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(transaction.BudgetName))
                                            {
                                                <span class="badge bg-info">@transaction.BudgetName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">None</span>
                                            }
                                        </td>
                                        <td>@transaction.AccountName</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(transaction.Description))
                                            {
                                                @transaction.Description
                                            }
                                            else
                                            {
                                                <span class="text-muted">No description</span>
                                            }
                                        </td>
                                        <td>
                                            @if (transaction.Type == "Income")
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-arrow-down"></i> Income
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-arrow-up"></i> Expense
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <strong class="@(transaction.Type == "Income" ? "text-success" : "text-danger")">
                                                @(transaction.Type == "Income" ? "+" : "-")@transaction.Amount.ToString("N2") @transaction.Currency
                                            </strong>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@transaction.Id" class="btn btn-sm btn-info" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@transaction.Id" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@transaction.Id" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> You don't have any transactions yet. Click "Create New Transaction" to get started.
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

