@model BudgetTracker.Models.DTOs.Budget.BudgetViewDto

@{
    ViewData["Title"] = "Delete Budget";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Budget
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong><i class="fas fa-exclamation-triangle"></i> Warning!</strong> 
                        <br/>
                        Are you sure you want to delete this budget? This action cannot be undone.
                        <br/><br/>
                        <strong>This will also permanently delete:</strong>
                        <ul class="mb-0 mt-2">
                            <li>All transactions associated with this budget</li>
                        </ul>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Budget Name</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Name</strong>
                        </dd>

                        <dt class="col-sm-4">Budget Period</dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")
                        </dd>

                        <dt class="col-sm-4">Account</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.AccountName))
                            {
                                <strong>@Model.AccountName</strong>
                            }
                            else
                            {
                                <span class="text-muted">All Accounts</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Budget Amount</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.BudgetAmount.ToString("N2") @Model.Currency</strong>
                        </dd>

                        <dt class="col-sm-4">Total Spent</dt>
                        <dd class="col-sm-8">@Model.SpentAmount.ToString("N2") @Model.Currency</dd>

                        <dt class="col-sm-4">Remaining</dt>
                        <dd class="col-sm-8">
                            <span class="@(Model.RemainingAmount >= 0 ? "text-success" : "text-danger")">
                                @Model.RemainingAmount.ToString("N2") @Model.Currency
                            </span>
                        </dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4" id="deleteForm">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('⚠️ WARNING: This will permanently delete this budget and ALL related transactions. This action CANNOT be undone!\n\nAre you sure you want to proceed?')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}

