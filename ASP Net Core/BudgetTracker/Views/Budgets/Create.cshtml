@model BudgetTracker.Models.DTOs.Budget.CreateBudgetDto

@{
    ViewData["Title"] = "Create Budget";
    var accounts = ViewBag.Accounts as IEnumerable<BudgetTracker.Models.DTOs.Account.AccountViewDto>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle"></i> Create New Budget
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Budget Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Monthly Budget, Q1 2024" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BudgetAmount" class="form-label">Budget Amount</label>
                            <div class="input-group">
                                <input asp-for="BudgetAmount" class="form-control" type="number" step="0.01" placeholder="1000.00" />
                                <span class="input-group-text" id="budgetCurrency">Select Account</span>
                            </div>
                            <span asp-validation-for="BudgetAmount" class="text-danger"></span>
                            <small class="form-text text-muted">Currency will match the selected account (or BGN if no account selected)</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AccountId" class="form-label">Account (Optional)</label>
                            <select asp-for="AccountId" class="form-select">
                                <option value="">-- No specific account (All accounts) --</option>
                                @if (accounts != null)
                                {
                                    @foreach (var account in accounts)
                                    {
                                        <option value="@account.Id">@account.Name (@account.Balance.ToString("N2") @account.Currency)</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                            <small class="form-text text-muted">Link this budget to a specific account, or leave blank for all accounts</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="StartDate" class="form-label">Start Date</label>
                                    <input asp-for="StartDate" class="form-control" type="date" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="EndDate" class="form-label">End Date</label>
                                    <input asp-for="EndDate" class="form-control" type="date" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> <strong>Note:</strong> The end date must be after the start date.
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Budget
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Update currency display when account changes
        document.getElementById('AccountId').addEventListener('change', function() {
            var selectedOption = this.options[this.selectedIndex];
            if (selectedOption.value) {
                // Extract currency from the option text (e.g., "Account Name (1000.00 EUR)")
                var text = selectedOption.text;
                var currencyMatch = text.match(/\([\d,.]+\s+([A-Z]{3})\)/);
                if (currencyMatch) {
                    document.getElementById('budgetCurrency').textContent = currencyMatch[1];
                }
                } else {
                    document.getElementById('budgetCurrency').textContent = 'BGN (default)';
                }
            });
    </script>
}

