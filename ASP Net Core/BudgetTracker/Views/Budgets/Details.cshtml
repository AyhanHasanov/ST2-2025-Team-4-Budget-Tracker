@model BudgetTracker.Models.DTOs.Budget.BudgetViewDto

@{
    ViewData["Title"] = "Budget Details";
    var progressPercentage = Model.BudgetAmount > 0 ? (Model.SpentAmount / Model.BudgetAmount * 100) : 0;
    var progressClass = progressPercentage >= 100 ? "bg-danger" : progressPercentage >= 80 ? "bg-warning" : "bg-success";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-pie"></i> Budget Details
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Budget Name</dt>
                        <dd class="col-sm-8">
                            <h5>@Model.Name</h5>
                        </dd>

                        <dt class="col-sm-4">Budget Period</dt>
                        <dd class="col-sm-8">
                            @Model.StartDate.ToString("MMMM dd, yyyy") - @Model.EndDate.ToString("MMMM dd, yyyy")
                        </dd>

                        <dt class="col-sm-4">Account</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.AccountName))
                            {
                                <strong>@Model.AccountName</strong>
                            }
                            else
                            {
                                <span class="text-muted">All Accounts</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Budget Amount</dt>
                        <dd class="col-sm-8">
                            <h4 class="text-primary">@Model.BudgetAmount.ToString("N2") @Model.Currency</h4>
                        </dd>

                        <dt class="col-sm-4">Total Spent</dt>
                        <dd class="col-sm-8">
                            <h5 class="text-danger">@Model.SpentAmount.ToString("N2") @Model.Currency</h5>
                        </dd>

                        <dt class="col-sm-4">Total Income</dt>
                        <dd class="col-sm-8">
                            <h5 class="text-success">@Model.IncomeAmount.ToString("N2") @Model.Currency</h5>
                        </dd>

                        <dt class="col-sm-4">Remaining</dt>
                        <dd class="col-sm-8">
                            <h5 class="@(Model.RemainingAmount >= 0 ? "text-success" : "text-danger")">
                                @Model.RemainingAmount.ToString("N2") @Model.Currency
                            </h5>
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Exceeded)
                            {
                                <span class="badge bg-danger">Over Budget</span>
                            }
                            else if (Model.InLimit)
                            {
                                <span class="badge bg-success">Within Budget</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Near Limit</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Progress</dt>
                        <dd class="col-sm-8">
                            <div class="progress" style="height: 30px;">
                                <div class="progress-bar @progressClass" role="progressbar" 
                                     style="width: @Math.Min(progressPercentage, 100)%" 
                                     aria-valuenow="@progressPercentage" aria-valuemin="0" aria-valuemax="100">
                                    <strong>@progressPercentage.ToString("F1")%</strong>
                                </div>
                            </div>
                        </dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Last Modified</dt>
                        <dd class="col-sm-8">@Model.ModifiedAt.ToString("MMMM dd, yyyy HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger float-end">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

