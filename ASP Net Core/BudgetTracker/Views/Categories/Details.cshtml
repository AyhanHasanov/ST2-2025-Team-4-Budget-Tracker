@model BudgetTracker.Models.DTOs.Category.CategoryViewDto

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-tag"></i> Category Details
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Category Name</dt>
                        <dd class="col-sm-8">
                            <h5>@Model.Name</h5>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }

                        <dt class="col-sm-4">Parent Category</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.ParentCategoryName))
                            {
                                <span class="badge bg-info">@Model.ParentCategoryName</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Root Category</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Last Modified</dt>
                        <dd class="col-sm-8">@Model.ModifiedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                        @if (Model.SubCategories != null && Model.SubCategories.Any())
                        {
                            <dt class="col-sm-4">Subcategories</dt>
                            <dd class="col-sm-8">
                                @foreach (var sub in Model.SubCategories)
                                {
                                    <span class="badge bg-success me-1">@sub.Name</span>
                                }
                            </dd>
                        }
                    </dl>
                </div>
                <div class="card-footer bg-white">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger float-end">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

