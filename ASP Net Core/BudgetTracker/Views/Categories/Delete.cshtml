@model BudgetTracker.Models.DTOs.Category.CategoryViewDto

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Category
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong>Warning!</strong> Are you sure you want to delete this category? This action cannot be undone.
                    </div>

                    @if (Model.SubCategories != null && Model.SubCategories.Any())
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> <strong>Note:</strong> This category has subcategories. They will become root categories after deletion.
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Category Name</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Name</strong>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }

                        <dt class="col-sm-4">Parent Category</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.ParentCategoryName))
                            {
                                <span class="badge bg-info">@Model.ParentCategoryName</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Root Category</span>
                            }
                        </dd>

                        @if (Model.SubCategories != null && Model.SubCategories.Any())
                        {
                            <dt class="col-sm-4">Subcategories</dt>
                            <dd class="col-sm-8">
                                @foreach (var sub in Model.SubCategories)
                                {
                                    <span class="badge bg-warning me-1">@sub.Name</span>
                                }
                            </dd>
                        }

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

