@model IEnumerable<BudgetTracker.Models.DTOs.Category.CategoryViewDto>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-3">
                <i class="fas fa-tags"></i> Categories
            </h2>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Category
                </a>
            }
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th><i class="fas fa-tag"></i> Category Name</th>
                                    <th><i class="fas fa-align-left"></i> Description</th>
                                    <th><i class="fas fa-sitemap"></i> Parent Category</th>
                                    <th><i class="fas fa-calendar"></i> Created</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@category.Name</strong>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(category.Description))
                                            {
                                                @category.Description
                                            }
                                            else
                                            {
                                                <span class="text-muted">No description</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(category.ParentCategoryName))
                                            {
                                                <span class="badge bg-info">@category.ParentCategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Root Category</span>
                                            }
                                        </td>
                                        <td>@category.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info" title="Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i> No categories have been created yet. @(User.IsInRole("Admin") ? "Click 'Create New Category' to get started." : "Please contact an administrator to create categories.")
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

