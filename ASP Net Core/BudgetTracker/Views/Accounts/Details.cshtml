@model BudgetTracker.Models.DTOs.Account.AccountViewDto

@{
    ViewData["Title"] = "Account Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-wallet"></i> Account Details
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Account Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Balance</dt>
                        <dd class="col-sm-8">
                            <h4 class="text-success">@Model.Balance.ToString("N2") @Model.Currency</h4>
                        </dd>

                        <dt class="col-sm-4">Currency</dt>
                        <dd class="col-sm-8">@Model.Currency</dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Last Modified</dt>
                        <dd class="col-sm-8">@Model.ModifiedAt.ToString("MMMM dd, yyyy HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger float-end">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

