@model BudgetTracker.Models.DTOs.Account.AccountViewDto

@{
    ViewData["Title"] = "Delete Account";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Account
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong><i class="fas fa-exclamation-triangle"></i> Critical Warning!</strong> 
                        <br/>
                        Are you sure you want to delete this account? This action cannot be undone.
                        <br/><br/>
                        <strong>This will also permanently delete:</strong>
                        <ul class="mb-0 mt-2">
                            <li>All budgets associated with this account</li>
                            <li>All transactions associated with this account</li>
                        </ul>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Account Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Balance</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Balance.ToString("N2") @Model.Currency</strong>
                        </dd>

                        <dt class="col-sm-4">Currency</dt>
                        <dd class="col-sm-8">@Model.Currency</dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4" id="deleteForm">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('⚠️ FINAL WARNING: This will permanently delete this account and ALL related budgets and transactions. This action CANNOT be undone!\n\nAre you absolutely sure you want to proceed?')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}

